<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/title_bar"
    android:layout_height="73dp"
    android:background="#009dd7"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingTop="28dp">

    <ImageButton
        android:id="@+id/menu_title_bar"
        android:layout_width="19dp"
        android:layout_height="19dp"
        android:layout_gravity="center_vertical"
        android:layout_margin="19dp"
        android:background="@drawable/img_menu" />

    <TextView
        android:id="@+id/tv_title_bar"
        android:layout_width="0dp"
        android:layout_height="33dp"
        android:layout_margin="8dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:text="首页"
        android:textColor="#ffffff"
        android:textSize="19sp" />

    <ImageButton
        android:id="@+id/message_title_bar"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="19dp"
        android:background="@drawable/message"
        />

    <ImageButton
        android:id="@+id/setting_title_bar"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="19dp"
        android:background="@drawable/abc_ic_menu_moreoverflow_mtrl_alpha" />

</LinearLayout>